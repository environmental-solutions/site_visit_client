FROM node:8.9.0

RUN curl -o- -L https://yarnpkg.com/install.sh | bash
RUN mkdir -p /app

WORKDIR /app

COPY package.json .

RUN yarn install
RUN yarn global add serve

ADD . /app

EXPOSE 5000
ENV PORT=5000

# CMD [ "node", "devserver.js" ]
# CMD [ "npm", "start" ]
# CMD [ "yarn", "start" ]node
CMD [ "yarn", "build" ]

